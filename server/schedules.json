{
    "reset": "02:59",
    "ranges": {
        "day": {
            "start": "sunrise",
            "end": "sunset-30"
        },
        "night": {
            "start": "sunset-30",
            "end": "+03:00"
        },
        "earlymorn": {
            "start": "03:00",
            "end": "07:30"
        }
    }, 
    "schedules":{
        "coffee": {
            "on": "alarm.time-10",
            "off": "/30"
        },
        "piano": {
            "off": "~60"
        },
        "driveway": {
            "off": "/1"
        },
        "outside": {
            "off": "/3"
        },
        "fan": {
            "off": "/60"
        },
        "lamp": {
            "on": "sunset-45",
            "off": "23:00"
        },
        "aquarium": {
            "on": "sunrise",
            "off": "22:00"
        },
        "wine": {
            "on": "sunset",
            "off": "23:52" 
        },
        "housefan": {
            "on": "!earlymorn & !hvac.on & hvac.nearTarget"
        },
        "vent": {
            "on": "housefan.on",
            "off": "!housefan.on"
        },
        "office": {
            "on": "!day & 192.168.0.112",
            "off": "day | !192.168.0.112"
        },
        "alarm": {
            "on": "alarm.time",
            "off": "coffee.power > 500"
        },
        "bed": {
            "on": "22:30 & owner.home & weather.temp < 60",
            "off": "alarm.time | 10:00",
            "cycle": "/540"
        },
        "grow": {
            "on": "06:00",
            "off": "18:00"
        }
    }
}
