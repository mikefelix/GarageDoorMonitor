{
    "reset": "02:59",
    "ranges": {
        "day": {
            "start": "sunrise",
            "end": "sunset-45"
        },
        "night": {
            "start": "sunset-30",
            "end": "03:00"
        },
        "earlymorn": {
            "start": "02:00",
            "end": "09:30"
        },
        "sleepytime": {
            "start": "22:00",
            "end": "alarm.ringTimeToday | 10:00"
        }
    }, 
    "aliases": {
        "home": "!hvac.away | phone | phone2 | phone3",
        "computer": "bigcomputer | littlecomputer",
        "hotinside": "therm.temp >= 75",
        "coldinside": "therm.temp <= 65",
        "uncomfortable": "hotinside | coldinside",
        "nearTargetTemp": "hvac.nearTarget & !hvac.on"
    },
    "groups": {
        "bed": ["bedlamp", "bedheat"],
        "livingroom": ["floorlamp", "wine", "couchlamp"]
    },
    "schedules":{
        "coffee": {
            "on": "alarm.time-10",
            "off": "/60 & coffee.power < 500",
            "override": "false"
        },
        "piano": {
            "off": "1~120"
        },
        "driveway": {
            "off": "/1"
        },
        "outside": {
            "off": "/5"
        },
        "bathroomfan": {
            "off": "/90",
            "override": false
        },
        "floorlamp": {
            "on": "sunset-15",
            "off": "23:00"
        },
        "couchlamp": {
            "on": "sunset-45",
            "off": "23:05"
        },
        "aquarium": {
            "on": "sunrise",
            "off": "22:00"
        },
        "wine": {
            "on": "sunset",
            "off": "23:45" 
        },
        "housefan": {
            "on": "!earlymorn & nearTargetTemp & uncomfortable"
        },
        "vent": {
            "on": "housefan.on",
            "off": "!housefan.on"
        },
        "bedroomfan": {
            "on": "vent & !earlymorn",
            "off": "!vent"
        },
        "office": {
            "on": "!day & computer",
            "off": "day | !computer"
        },
        "alarm": {
            "on": "alarm.time",
            "off": "coffee.power > 500 | 11:00"
        },
        "bedheat": {
            "on": "sleepytime & home & weather.temp < 50",
            "off": "!sleepytime | bedheat.power < 5",
            "override": true
        },
        "scent": {
            "on": "!sleepytime & !hvac.away & /10",
            "off": "/10",
            "override": false,
            "disabled": true
        },
        "tessel": {
            "on": "!tessel.on",
            "off": "garagedoor.offline & tessel.upTime > 2",
            "disabled": true
        },
        "stereo": {
            "on": "22:00 & home",
            "off": "!home | alarm.ringTimeToday"
        },
        "charger": {
            "on": "alarm.ringTimeToday",
            "off": "!home"
        },
        "bedlamp": {
            "on": "21:15 & home",
            "off": "23:59 | !home"
        }
    }
}
